{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ .Site.Title }}</title>
  <link href="{{ .Permalink }}index.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ .Site.BaseURL }}"/>
  <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>
  <id>{{ .Permalink }}</id>
  <author>
    <name>wickedlyethan</name>
  </author>
  <generator uri="https://gohugo.io">Hugo</generator>

  {{/* merge the three sections into one slice, then range */}}
  {{ $pages := union
      (where .Site.RegularPages "Section" "blog")
      (union
        (where .Site.RegularPages "Section" "notes")
        (where .Site.RegularPages "Section" "photos")
      )
  }}
  {{ range first 10 $pages.ByDate.Reverse}}
  <entry>
    <title type="html">{{ .Title }}</title>
    <link rel="alternate" type="text/html" href="{{ .Permalink }}"/>
    <id>{{ .Permalink }}</id>
    <updated>{{ .PublishDate.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>
    <author>
      <name>wickedlyethan</name>
    </author>
    <content type="html">
      {{ if and (eq .Section "photos") .Params.Photos }}
        <img src="{{ (index .Params.Photos 0).src | absURL }}" alt="{{(index .Params.Photos 0).alt}}" />
      {{ end }}
      {{ .Summary | transform.XMLEscape | safeHTML }}
      <p><a href="{{ .Permalink }}">Read more â†’</a></p>
    </content>
  </entry>
  {{ end }}
</feed>
